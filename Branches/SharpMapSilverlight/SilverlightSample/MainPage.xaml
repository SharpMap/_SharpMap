<UserControl x:Class="SilverlightSample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480">
    <Grid x:Name="grid" MouseLeftButtonDown="MyGrid_MouseLeftButtonDown">
        <StackPanel Background="Pink" >
            <TextBlock Text="Text to Overlay" />
            <Border x:Name="border" BorderBrush="Red" BorderThickness="10" Background="LightBlue"   UseLayoutRounding="True">
                <Image x:Name="image" Width="256" Height="256"></Image>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
